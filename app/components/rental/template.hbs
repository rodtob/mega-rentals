<div
  class="w-full max-w-xs bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 rent-wrapper"
  data-test-selector={{@dataTestSelector}}
>
  <a href={{concat 'rental/'@product.id}} class='center'>
    <img
      class="p-8 rounded-t-lg h-60"
      src={{@product.photoMainUrl}}
      alt="product image"
    />
  </a>
  <div class="px-5 pb-5">
    <a href="#">
            <h5
        class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white truncate"
      >{{@product.name}}</h5>
      <h5
        class="text-l font-semibold tracking-tight text-gray-900 dark:text-white truncate"
      >{{@product.priceBreakdown.grossPrice.value}} {{@product.priceBreakdown.grossPrice.currency}}</h5>
    </a>
    <div class="flex items-center mt-2.5 mb-5">
      <span
        class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"
      >{{@product.reviewScore}}</span>
    </div>
    <div class="flex items-center justify-between">
      <a
        href="#"
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      >Rent</a>
    </div>
  </div>
</div>
